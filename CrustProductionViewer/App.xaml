<Application
    x:Class="CrustProductionViewer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CrustProductionViewer"
    xmlns:converters="using:CrustProductionViewer.UI.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>

            <!-- Custom resources here -->
            <converters:BoolToSeverityConverter x:Key="BoolToSeverityConverter"/>
            <converters:ConnectionStatusConverter x:Key="ConnectionStatusConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
